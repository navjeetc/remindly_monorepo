<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h2 class="text-3xl font-bold text-gray-900">Add Bulk Availability</h2>
  </div>

  <div class="bg-blue-50 border-l-4 border-blue-400 p-4">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
        </svg>
      </div>
      <div class="ml-3">
        <p class="text-sm text-blue-700">
          Select multiple dates to set the same availability times. Great for setting your weekly schedule!
        </p>
      </div>
    </div>
  </div>

  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <%= form_with url: bulk_create_caregiver_availabilities_path, method: :post, local: true, class: "space-y-6" do |f| %>
        
        <div>
          <div class="flex justify-between items-center mb-4">
            <label class="block text-sm font-medium text-gray-700">Select Dates</label>
            <div class="flex space-x-2">
              <%= link_to bulk_new_caregiver_availabilities_path(start_date: @start_date - 28.days), 
                  class: "px-3 py-1 text-sm font-medium text-gray-700 bg-gray-100 rounded-md hover:bg-gray-200" do %>
                ← Previous 4 Weeks
              <% end %>
              <%= link_to bulk_new_caregiver_availabilities_path(start_date: @start_date + 28.days), 
                  class: "px-3 py-1 text-sm font-medium text-gray-700 bg-gray-100 rounded-md hover:bg-gray-200" do %>
                Next 4 Weeks →
              <% end %>
            </div>
          </div>
          
          <% current_month = nil %>
          <% 28.times do |i| %>
            <% date = @start_date + i.days %>
            <% month_name = date.strftime('%B %Y') %>
            
            <%# Show month header when month changes %>
            <% if current_month != month_name %>
              <% current_month = month_name %>
              <% if i > 0 %>
                </div>
              <% end %>
              <div class="mt-4 mb-2">
                <h3 class="text-sm font-semibold text-gray-900"><%= month_name %></h3>
              </div>
              <div class="grid grid-cols-7 gap-2">
            <% end %>
            
            <% day_name = date.strftime('%a') %>
            <% is_weekend = date.saturday? || date.sunday? %>
            
            <label class="relative flex flex-col items-center p-2 border rounded-lg cursor-pointer hover:bg-gray-50 <%= is_weekend ? 'bg-gray-50' : '' %>">
              <input type="checkbox" 
                     name="dates[]" 
                     value="<%= date.to_s %>" 
                     class="sr-only peer"
                     id="date_<%= date.to_s %>">
              <div class="peer-checked:bg-blue-600 peer-checked:text-white w-full text-center rounded-md p-1 transition-colors">
                <div class="text-xs font-medium"><%= day_name %></div>
                <div class="text-sm"><%= date.day %></div>
              </div>
            </label>
            
            <%# Close the last grid %>
            <% if i == 27 %>
              </div>
            <% end %>
          <% end %>
          
          <p class="mt-2 text-sm text-gray-500">Click dates to select them (showing next 4 weeks)</p>
          
          <div class="mt-4 flex flex-wrap gap-2">
            <button type="button" onclick="selectWeekdays()" class="px-3 py-1 text-xs font-medium text-blue-700 bg-blue-50 rounded-md hover:bg-blue-100">
              Select Weekdays
            </button>
            <button type="button" onclick="selectWeekends()" class="px-3 py-1 text-xs font-medium text-blue-700 bg-blue-50 rounded-md hover:bg-blue-100">
              Select Weekends
            </button>
            <button type="button" onclick="selectAll()" class="px-3 py-1 text-xs font-medium text-blue-700 bg-blue-50 rounded-md hover:bg-blue-100">
              Select All
            </button>
            <button type="button" onclick="clearAll()" class="px-3 py-1 text-xs font-medium text-gray-700 bg-gray-50 rounded-md hover:bg-gray-100">
              Clear All
            </button>
          </div>
        </div>

        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          <div>
            <%= label_tag :start_time, "Start Time", class: "block text-sm font-medium text-gray-700" %>
            <%= time_field_tag :start_time, "09:00", 
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>

          <div>
            <%= label_tag :end_time, "End Time", class: "block text-sm font-medium text-gray-700" %>
            <%= time_field_tag :end_time, "17:00", 
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>
        </div>

        <div>
          <%= label_tag :notes, "Notes (Optional)", class: "block text-sm font-medium text-gray-700" %>
          <%= text_area_tag :notes, nil,
              rows: 3,
              placeholder: "e.g., Available for all appointments",
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        </div>

        <div class="flex justify-end space-x-3">
          <%= link_to "Cancel", caregiver_availabilities_path, 
              class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
          <%= submit_tag "Add Availability", 
              class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
  </div>

  <%= link_to "← Back to Availability", caregiver_availabilities_path, class: "text-blue-600 hover:text-blue-800" %>
</div>

<script>
  function selectWeekdays() {
    document.querySelectorAll('input[name="dates[]"]').forEach(checkbox => {
      const date = new Date(checkbox.value);
      const day = date.getDay();
      checkbox.checked = day >= 1 && day <= 5; // Monday-Friday
    });
  }

  function selectWeekends() {
    document.querySelectorAll('input[name="dates[]"]').forEach(checkbox => {
      const date = new Date(checkbox.value);
      const day = date.getDay();
      checkbox.checked = day === 0 || day === 6; // Saturday-Sunday
    });
  }

  function selectAll() {
    document.querySelectorAll('input[name="dates[]"]').forEach(checkbox => {
      checkbox.checked = true;
    });
  }

  function clearAll() {
    document.querySelectorAll('input[name="dates[]"]').forEach(checkbox => {
      checkbox.checked = false;
    });
  }
</script>
