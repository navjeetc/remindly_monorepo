<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h2 class="text-3xl font-bold text-gray-900">My Availability</h2>
    <%= link_to "Add Availability", new_caregiver_availability_path, 
        class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
  </div>

  <% if @availabilities.any? %>
    <div class="bg-white shadow overflow-hidden sm:rounded-md">
      <ul class="divide-y divide-gray-200">
        <% @availabilities.each do |availability| %>
          <li>
            <div class="px-4 py-4 sm:px-6">
              <div class="flex items-center justify-between">
                <div class="flex-1">
                  <p class="text-lg font-medium text-gray-900">
                    <%= availability.date.strftime('%A, %B %d, %Y') %>
                  </p>
                  <p class="text-sm text-gray-600 mt-1">
                    <%= availability.start_time.strftime('%I:%M %p') %> - <%= availability.end_time.strftime('%I:%M %p') %>
                  </p>
                  <% if availability.notes.present? %>
                    <p class="text-sm text-gray-500 mt-2"><%= availability.notes %></p>
                  <% end %>
                </div>
                <div class="ml-4 flex-shrink-0 flex space-x-2">
                  <%= link_to "Edit", edit_caregiver_availability_path(availability), 
                      class: "px-3 py-1 text-sm font-medium text-blue-700 bg-blue-50 rounded-md hover:bg-blue-100" %>
                  <%= button_to "Delete", caregiver_availability_path(availability), 
                      method: :delete,
                      data: { confirm: "Are you sure?" },
                      class: "px-3 py-1 text-sm font-medium text-red-700 bg-red-50 rounded-md hover:bg-red-100" %>
                </div>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  <% else %>
    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No availability set</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by adding your available times.</p>
        <div class="mt-6">
          <%= link_to "Add Availability", new_caregiver_availability_path, 
              class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
        </div>
      </div>
    </div>
  <% end %>

  <%= link_to "â† Back to Dashboard", dashboard_path, class: "text-blue-600 hover:text-blue-800" %>
</div>
