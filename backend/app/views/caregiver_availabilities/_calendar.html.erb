<%
  # Get current month or use params
  @current_date = params[:month].present? ? Date.parse(params[:month]) : Date.current
  @start_date = @current_date.beginning_of_month.beginning_of_week(:sunday)
  @end_date = @current_date.end_of_month.end_of_week(:sunday)
  
  # Group availabilities by date for quick lookup
  availabilities_by_date = availabilities.group_by { |a| a.date.to_date }
%>

<div class="bg-white shadow rounded-lg p-6">
  <!-- Calendar Header -->
  <div class="flex items-center justify-between mb-6">
    <%= link_to caregiver_availabilities_path(month: (@current_date - 1.month).strftime('%Y-%m-%d')), 
        class: "p-2 rounded-full hover:bg-gray-100" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    <% end %>
    
    <h3 class="text-xl font-bold text-gray-900">
      <%= @current_date.strftime('%B %Y') %>
    </h3>
    
    <%= link_to caregiver_availabilities_path(month: (@current_date + 1.month).strftime('%Y-%m-%d')), 
        class: "p-2 rounded-full hover:bg-100" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
    <% end %>
  </div>

  <!-- Calendar Grid -->
  <div class="grid grid-cols-7 gap-px bg-gray-200 border border-gray-200 rounded-lg overflow-hidden">
    <!-- Day Headers -->
    <% %w[Sun Mon Tue Wed Thu Fri Sat].each do |day| %>
      <div class="bg-gray-50 p-2 text-center text-xs font-semibold text-gray-700">
        <%= day %>
      </div>
    <% end %>
    
    <!-- Calendar Days -->
    <% (@start_date..@end_date).each do |date| %>
      <%
        is_current_month = date.month == @current_date.month
        is_today = date == Date.current
        day_availabilities = availabilities_by_date[date] || []
        has_availability = day_availabilities.any?
        is_past = date < Date.current
        
        # Determine background color
        if is_past
          bg_color = 'bg-gray-100'
          text_color = 'text-gray-400'
        elsif has_availability
          bg_color = 'bg-green-100 hover:bg-green-200'
          text_color = 'text-green-900'
        else
          bg_color = 'bg-white hover:bg-gray-50'
          text_color = is_current_month ? 'text-gray-900' : 'text-gray-400'
        end
        
        border_class = is_today ? 'ring-2 ring-blue-500 ring-inset' : ''
      %>
      
      <div class="<%= bg_color %> <%= border_class %> p-2 min-h-[100px] relative cursor-pointer transition-colors"
           onclick="showDayDetails('<%= date.strftime('%Y-%m-%d') %>')">
        <div class="text-sm font-medium <%= text_color %> mb-1">
          <%= date.day %>
        </div>
        
        <% if has_availability %>
          <div class="space-y-1">
            <% day_availabilities.each do |avail| %>
              <div class="text-xs bg-green-600 text-white px-1 py-0.5 rounded" title="<%= avail.start_time.strftime('%I:%M %p') %> - <%= avail.end_time.strftime('%I:%M %p') %>">
                <div class="truncate"><%= avail.start_time.strftime('%I:%M %p') %></div>
                <div class="truncate">- <%= avail.end_time.strftime('%I:%M %p') %></div>
              </div>
            <% end %>
          </div>
        <% elsif !is_past && is_current_month %>
          <div class="text-xs text-gray-400 italic">
            No availability
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  
  <!-- Legend -->
  <div class="mt-6 flex items-center justify-center space-x-6 text-sm">
    <div class="flex items-center">
      <div class="w-4 h-4 bg-green-100 border border-green-300 rounded mr-2"></div>
      <span class="text-gray-700">Available</span>
    </div>
    <div class="flex items-center">
      <div class="w-4 h-4 bg-white border border-gray-200 rounded mr-2"></div>
      <span class="text-gray-700">Not Available</span>
    </div>
    <div class="flex items-center">
      <div class="w-4 h-4 bg-gray-100 border border-gray-200 rounded mr-2"></div>
      <span class="text-gray-700">Past</span>
    </div>
  </div>
</div>

<script>
function showDayDetails(dateStr) {
  // For now, just navigate to add availability for that date
  // You can enhance this to show a modal with day details
  window.location.href = `/caregiver_availabilities/new?date=${dateStr}`;
}
</script>
