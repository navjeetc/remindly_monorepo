<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h2 class="text-3xl font-bold text-gray-900">Add Availability</h2>
  </div>

  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <%= form_with model: @availability, url: caregiver_availabilities_path, local: true, class: "space-y-6" do |f| %>
        <% if @availability.errors.any? %>
          <div class="bg-red-50 border-l-4 border-red-400 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@availability.errors.count, "error") %> prohibited this availability from being saved:
                </h3>
                <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                  <% @availability.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <div>
          <%= f.label :date, "Date", class: "block text-sm font-medium text-gray-700" %>
          <%= f.date_field :date, 
              value: Date.today,
              min: Date.today,
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          <p class="mt-1 text-sm text-gray-500">Select the date you'll be available</p>
        </div>

        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          <div>
            <%= f.label :start_time, "Start Time", class: "block text-sm font-medium text-gray-700" %>
            <%= f.time_field :start_time, 
                value: "09:00",
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>

          <div>
            <%= f.label :end_time, "End Time", class: "block text-sm font-medium text-gray-700" %>
            <%= f.time_field :end_time, 
                value: "17:00",
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>
        </div>

        <div>
          <%= f.label :notes, "Notes (Optional)", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_area :notes, 
              rows: 3,
              placeholder: "e.g., Available for doctor appointments only",
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          <p class="mt-1 text-sm text-gray-500">Add any special notes about this availability</p>
        </div>

        <div class="flex justify-end space-x-3">
          <%= link_to "Cancel", caregiver_availabilities_path, 
              class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
          <%= f.submit "Add Availability", 
              class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
  </div>

  <%= link_to "â† Back to Availability", caregiver_availabilities_path, class: "text-blue-600 hover:text-blue-800" %>
</div>
