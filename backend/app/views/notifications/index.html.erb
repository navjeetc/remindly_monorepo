<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h2 class="text-3xl font-bold text-gray-900">Notifications</h2>
    <% if @unread_count > 0 %>
      <%= button_to "Mark All Read", mark_all_read_notifications_path, method: :post,
          class: "px-4 py-2 text-sm font-medium text-blue-700 bg-blue-50 rounded-md hover:bg-blue-100" %>
    <% end %>
  </div>

  <% if @unread_count > 0 %>
    <div class="bg-blue-50 border-l-4 border-blue-400 p-4">
      <p class="text-sm text-blue-700">
        You have <%= pluralize(@unread_count, 'unread notification') %>
      </p>
    </div>
  <% end %>

  <% if @notifications.any? %>
    <div class="bg-white shadow overflow-hidden sm:rounded-md">
      <ul class="divide-y divide-gray-200">
        <% @notifications.each do |notification| %>
          <li class="<%= notification.unread? ? 'bg-blue-50' : '' %>">
            <div class="px-4 py-4 sm:px-6">
              <div class="flex items-start justify-between">
                <div class="flex-1">
                  <div class="flex items-center">
                    <% if notification.notification_type == 'coverage_gap' %>
                      <span class="text-2xl mr-3">‚ö†Ô∏è</span>
                    <% elsif notification.notification_type == 'coverage_filled' %>
                      <span class="text-2xl mr-3">‚úÖ</span>
                    <% else %>
                      <span class="text-2xl mr-3">üì¢</span>
                    <% end %>
                    <div>
                      <p class="text-sm font-medium text-gray-900 <%= notification.unread? ? 'font-bold' : '' %>">
                        <%= notification.title %>
                      </p>
                      <p class="text-sm text-gray-600 mt-1"><%= notification.message %></p>
                      <p class="text-xs text-gray-500 mt-2">
                        <%= time_ago_in_words(notification.created_at) %> ago
                      </p>
                    </div>
                  </div>
                  
                  <% if notification.notification_type == 'coverage_gap' && notification.metadata['senior_id'] %>
                    <div class="mt-3">
                      <%= link_to "View Coverage", senior_coverage_path(notification.metadata['senior_id']),
                          class: "inline-flex items-center px-3 py-1 text-sm font-medium text-blue-700 bg-blue-100 rounded-md hover:bg-blue-200" %>
                      <%= link_to "Add Availability", caregiver_availabilities_path,
                          class: "inline-flex items-center px-3 py-1 text-sm font-medium text-green-700 bg-green-100 rounded-md hover:bg-green-200 ml-2" %>
                    </div>
                  <% end %>
                </div>
                
                <% if notification.unread? %>
                  <%= button_to "Mark Read", mark_read_notification_path(notification), method: :post,
                      class: "ml-4 px-3 py-1 text-xs font-medium text-gray-700 bg-gray-100 rounded-md hover:bg-gray-200" %>
                <% end %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
    
    <%= paginate @notifications if @notifications.respond_to?(:current_page) %>
  <% else %>
    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No notifications</h3>
        <p class="mt-1 text-sm text-gray-500">You're all caught up!</p>
      </div>
    </div>
  <% end %>

  <%= link_to "‚Üê Back to Dashboard", dashboard_path, class: "text-blue-600 hover:text-blue-800" %>
</div>
