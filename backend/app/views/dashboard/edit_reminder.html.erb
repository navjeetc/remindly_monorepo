<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h2 class="text-3xl font-bold text-gray-900">Edit Reminder for <%= @senior.email %></h2>
    <%= link_to "← Back", senior_dashboard_path(@senior), class: "text-blue-600 hover:text-blue-800" %>
  </div>

  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <%= form_with model: @reminder, url: update_reminder_dashboard_path(@senior, @reminder), method: :patch, class: "space-y-6" do |f| %>
        <% if @reminder.errors.any? %>
          <div class="bg-red-50 border-l-4 border-red-400 p-4">
            <h3 class="text-sm font-medium text-red-800">
              <%= pluralize(@reminder.errors.count, "error") %> prohibited this reminder from being saved:
            </h3>
            <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
              <% @reminder.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= f.label :title, "Reminder Title", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :title, required: true, placeholder: "e.g., Take morning medication", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :notes, "Notes (Optional)", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_area :notes, rows: 3, placeholder: "Additional details...", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        </div>

        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          <div>
            <%= f.label :category, "Category", class: "block text-sm font-medium text-gray-700" %>
            <%= f.select :category, 
                options_for_select([['Medication', 'medication'], ['Hydration', 'hydration'], ['Routine', 'routine']], @reminder.category),
                {},
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
            %>
          </div>

          <div>
            <%= f.label :time, "Time", class: "block text-sm font-medium text-gray-700" %>
            <% current_time = @reminder.start_time ? @reminder.start_time.in_time_zone(@senior.tz).strftime("%H:%M") : Time.current.in_time_zone(@senior.tz).strftime("%H:%M") %>
            <%= f.time_field :time, value: current_time, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>
        </div>

        <div>
          <%= f.label :frequency, "Frequency", class: "block text-sm font-medium text-gray-700" %>
          <% current_frequency = @reminder.rrule.include?('WEEKLY') ? 'weekly' : 'daily' %>
          <%= f.select :frequency,
              options_for_select([['Daily', 'daily'], ['Weekly', 'weekly']], current_frequency),
              {},
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
          %>
        </div>

        <div class="flex justify-end space-x-3">
          <%= link_to "Cancel", senior_dashboard_path(@senior), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
          <%= f.submit "Update Reminder", class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
      
      <!-- Delete button in separate form -->
      <div class="mt-4 pt-4 border-t border-gray-200">
        <%= button_to "Delete Reminder", delete_reminder_dashboard_path(@senior, @reminder), method: :delete, data: { confirm: "Are you sure you want to delete this reminder?" }, class: "inline-flex items-center px-4 py-2 border border-red-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50" %>
      </div>
    </div>
  </div>
</div>
