<div class="max-w-2xl mx-auto">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">Contact Us</h1>
  
  <!-- Introduction -->
  <div class="bg-white shadow rounded-lg p-6 mb-8">
    <p class="text-lg text-gray-700 mb-4">
      Have questions, feedback, or need assistance? We'd love to hear from you! Fill out the form below and we'll get back to you as soon as possible.
    </p>
  </div>

  <!-- Contact Form -->
  <div class="bg-white shadow rounded-lg p-6">
    <%= form_with url: contact_path, method: :post, local: true, class: "space-y-6" do |f| %>
      
      <!-- Name Field -->
      <div>
        <%= label_tag :name, "Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= text_field_tag :name, params[:name], 
            required: true,
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm px-4 py-2 border",
            placeholder: "Your full name" %>
      </div>

      <!-- Email Field -->
      <div>
        <%= label_tag :email, "Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= email_field_tag :email, params[:email], 
            required: true,
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm px-4 py-2 border",
            placeholder: "your.email@example.com" %>
      </div>

      <!-- Description Field -->
      <div>
        <%= label_tag :description, "Message", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= text_area_tag :description, params[:description], 
            required: true,
            rows: 6,
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm px-4 py-2 border",
            placeholder: "Please describe your question, feedback, or issue..." %>
      </div>

      <!-- Submit Button -->
      <div class="flex items-center justify-between">
        <%= link_to "Back to Dashboard", dashboard_path, 
            class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        
        <%= submit_tag "Send Message", 
            class: "inline-flex items-center px-6 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
      </div>
    <% end %>
  </div>

  <!-- Contact Information -->
  <div class="mt-8 bg-blue-50 border-l-4 border-blue-400 p-4 rounded">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
        </svg>
      </div>
      <div class="ml-3">
        <p class="text-sm text-blue-700">
          We typically respond within 24-48 hours. For urgent issues, please include "URGENT" in your message.
        </p>
      </div>
    </div>
  </div>
</div>
