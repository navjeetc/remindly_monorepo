<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h2 class="text-3xl font-bold text-gray-900">
      <%= current_user.role_senior? ? "Senior Dashboard" : "Caregiver Dashboard" %>
    </h2>
    <div class="space-x-4">
      <% if current_user.role_senior? %>
        <%= link_to "Generate Pairing Token", generate_token_dashboard_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
      <% end %>
      <% if current_user.role_caregiver? %>
        <%= link_to "Pair with Senior", pair_dashboard_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
      <% end %>
    </div>
  </div>

  <% if @pending_links.any? %>
    <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-yellow-700">
            You have <%= pluralize(@pending_links.count, 'pending pairing request') %>. Share the token with your caregiver.
          </p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Senior's Upcoming Tasks -->
  <!-- Debug: role=<%= current_user.role %>, tasks_defined=<%= defined?(@upcoming_tasks).present? %>, tasks_count=<%= @upcoming_tasks&.count || 0 %> -->
  <% if current_user.role_senior? && defined?(@upcoming_tasks) && @upcoming_tasks.present? %>
    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Upcoming Tasks (Next 7 Days)</h3>
        </div>
        <div class="space-y-3">
          <% @upcoming_tasks.each do |task| %>
            <div class="border-l-4 <%= task.priority == 'high' ? 'border-red-400' : task.priority == 'medium' ? 'border-yellow-400' : 'border-blue-400' %> bg-gray-50 p-4">
              <div class="flex justify-between items-start">
                <div class="flex-1">
                  <p class="text-sm font-medium text-gray-900"><%= task.title %></p>
                  <% if task.description.present? %>
                    <p class="text-sm text-gray-600 mt-1"><%= truncate(task.description, length: 100) %></p>
                  <% end %>
                  <div class="mt-2 flex items-center space-x-4 text-xs text-gray-500">
                    <span><%= task.scheduled_at.in_time_zone(current_user.tz).strftime("%b %d, %I:%M %p") %></span>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                      <%= task.task_type.titleize %>
                    </span>
                    <% if task.assigned_to %>
                      <span class="text-green-600">Assigned to: <%= task.assigned_to.friendly_name %></span>
                    <% end %>
                  </div>
                </div>
                <div class="flex items-center space-x-2">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= task.priority == 'high' ? 'bg-red-100 text-red-800' : task.priority == 'medium' ? 'bg-yellow-100 text-yellow-800' : 'bg-blue-100 text-blue-800' %>">
                    <%= task.priority.titleize %>
                  </span>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Senior's Today's Reminders -->
  <!-- Debug: role=<%= current_user.role %>, occurrences_defined=<%= defined?(@today_occurrences).present? %>, occurrences_count=<%= @today_occurrences&.count || 0 %> -->
  <% if current_user.role_senior? && defined?(@today_occurrences) && @today_occurrences.present? %>
    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Today's Reminders</h3>
        <div class="space-y-3">
          <% @today_occurrences.each do |occ| %>
            <div class="border-l-4 <%= occ.status == 'pending' ? 'border-yellow-400 bg-yellow-50' : occ.status == 'acknowledged' ? 'border-green-400 bg-green-50' : 'border-red-400 bg-red-50' %> p-4">
              <div class="flex justify-between items-start">
                <div class="flex-1">
                  <p class="text-sm font-medium text-gray-900"><%= occ.reminder.title %></p>
                  <% if occ.reminder.notes.present? %>
                    <p class="text-sm text-gray-600 mt-1"><%= occ.reminder.notes %></p>
                  <% end %>
                  <div class="mt-2 flex items-center space-x-4 text-xs text-gray-500">
                    <span><%= occ.scheduled_at.in_time_zone(current_user.tz).strftime("%I:%M %p") %></span>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= occ.status == 'pending' ? 'bg-yellow-100 text-yellow-800' : occ.status == 'acknowledged' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                      <%= occ.status.titleize %>
                    </span>
                    <% if occ.acknowledgements.any? %>
                      <span class="text-green-600">âœ“ <%= occ.acknowledgements.last.kind.titleize %></span>
                    <% end %>
                  </div>
                </div>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <%= occ.reminder.category.titleize %>
                </span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Show linked seniors for caregivers -->
  <% if @linked_seniors.any? %>
    <div class="bg-white shadow overflow-hidden sm:rounded-md">
      <div class="px-4 py-3 bg-gray-50 border-b border-gray-200">
        <h3 class="text-sm font-medium text-gray-900">Seniors You're Caring For</h3>
      </div>
      <ul class="divide-y divide-gray-200">
        <% @linked_seniors.each do |link| %>
          <li>
            <%= link_to senior_dashboard_path(link.senior.id), class: "block hover:bg-gray-50" do %>
              <div class="px-4 py-4 sm:px-6">
                <div class="flex items-center justify-between">
                  <div class="flex-1">
                    <p class="text-lg font-medium text-blue-600 truncate">
                      <%= link.senior.display_name %>
                    </p>
                    <% if link.senior.display_name != link.senior.email %>
                      <p class="text-sm text-gray-500"><%= link.senior.email %></p>
                    <% end %>
                    <div class="mt-2 flex items-center text-sm text-gray-500">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                        <%= link.permission.titleize %>
                      </span>
                      <span class="ml-4">
                        Timezone: <%= link.senior.tz %>
                      </span>
                    </div>
                  </div>
                  <div class="ml-4 flex-shrink-0 flex space-x-2">
                    <%= link_to "View", senior_dashboard_path(link.senior.id), class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
                    <%= button_to "Unlink", unlink_dashboard_path(link.id), method: :delete, data: { confirm: "Are you sure?" }, class: "inline-flex items-center px-3 py-2 border border-red-300 shadow-sm text-sm leading-4 font-medium rounded-md text-red-700 bg-white hover:bg-red-50" %>
                  </div>
                </div>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <!-- Show linked caregivers for seniors only -->
  <% if current_user.role_senior? %>
    <% linked_caregivers = current_user.senior_links.includes(:caregiver).where.not(caregiver_id: nil) %>
    <% if linked_caregivers.any? %>
    <div class="bg-white shadow overflow-hidden sm:rounded-md">
      <div class="px-4 py-3 bg-gray-50 border-b border-gray-200">
        <h3 class="text-sm font-medium text-gray-900">Your Caregivers</h3>
      </div>
      <ul class="divide-y divide-gray-200">
        <% linked_caregivers.each do |link| %>
          <li class="px-4 py-4 sm:px-6">
            <div class="flex items-center justify-between">
              <div class="flex-1">
                <p class="text-lg font-medium text-green-600 truncate">
                  <%= link.caregiver.friendly_name %>
                </p>
                <% if link.caregiver.friendly_name != link.caregiver.email %>
                  <p class="text-sm text-gray-500"><%= link.caregiver.email %></p>
                <% end %>
                <div class="mt-2 flex items-center text-sm text-gray-500">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    <%= link.permission.titleize %> Access
                  </span>
                  <span class="ml-4">
                    Linked <%= time_ago_in_words(link.created_at) %> ago
                  </span>
                </div>
              </div>
              <div class="ml-4 flex-shrink-0">
                <%= button_to "Remove Access", unlink_dashboard_path(link.id), method: :delete, data: { confirm: "Remove #{link.caregiver.email}'s access?" }, class: "inline-flex items-center px-3 py-2 border border-red-300 shadow-sm text-sm leading-4 font-medium rounded-md text-red-700 bg-white hover:bg-red-50" %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
    <% end %>
  <% end %>
  
  <% if @linked_seniors.empty? && (current_user.role_caregiver? || (current_user.role_senior? && current_user.senior_links.includes(:caregiver).where.not(caregiver_id: nil).empty?)) %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No linked seniors</h3>
      <p class="mt-1 text-sm text-gray-500">Get started by pairing with a senior using their pairing token.</p>
      <div class="mt-6">
        <%= link_to "Pair with Senior", pair_dashboard_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
      </div>
    </div>
  <% end %>
</div>
